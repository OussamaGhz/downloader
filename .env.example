
DATABASE_URL=postgresql://user:password@db:5432/telegram_scraper
ENCRYPTION_KEY=your-encryption-key-here-base64-encoded

# =============================================================================
# Prefect Configuration
# =============================================================================
PREFECT_API_URL=http://prefect-server:4200/api


NAS_SERVER=10.200.0.200

NAS_SHARE=LEAKSPARK

NAS_USERNAME=admin
NAS_PASSWORD=your-nas-password-here

# SMB port (default: 445)
NAS_PORT=445


MAX_FILES_PER_RUN=10

# Number of concurrent downloads (affects memory usage)
# Recommended: 3-5 for large files, 10-20 for smaller files
DOWNLOAD_CONCURRENCY=3

# =============================================================================
# Telegram Scraper - Retry Settings
# =============================================================================
# Number of retry attempts for failed downloads
DOWNLOAD_RETRY_ATTEMPTS=3

# Base delay between retries (in seconds, exponential backoff applied)
DOWNLOAD_RETRY_BASE_DELAY=2

# =============================================================================
# Telegram Scraper - Timeout Configurations (in seconds)
# =============================================================================
# Timeout per individual file download
# Recommended: 1800 (30 min) for 2GB files, 600 (10 min) for smaller files
DOWNLOAD_TIMEOUT_PER_FILE=1800

# Timeout for entire download phase (all files in batch)
# Recommended: 14400 (4 hours) for large files, 3600 (1 hour) for smaller
DOWNLOAD_TASK_BASE_TIMEOUT=14400


PROCESS_FILE_TIMEOUT=3600


S3_BUCKET=my-app-bucket
S3_ACCESS_KEY_ID=your-access-key-id
S3_SECRET_ACCESS_KEY=your-secret-access-key
S3_ENDPOINT_URL=http://minio:9000

